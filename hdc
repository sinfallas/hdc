#!/usr/bin/env bash
# Made by Sinfallas <sinfallas@yahoo.com>
# Licence: GPL-2
LC_ALL=C
if [[ "$EUID" != "0" ]]; then
	echo -e "\e[00;31mERROR: debe ser root\e[00m"
	exit 1
fi
trap "rm -f /run/$(basename $0).pid; exit" 0 1 2 3 15
echo "$BASHPID" > /run/$(basename $0).pid
name=$(hostname)
listo=/tmp/"$name"
rm -rf "$listo"/*
rm -f /tmp/$name.tar.gz

case "$1" in
	instalar)
		apt-get -q update
		apt-get -y install hwinfo pciutils pcmciautils usbutils lshw
		;;	

	buscar)
		if ! [[ -f /usr/sbin/hwinfo ]] || [[ $(dpkg --get-selections | grep -w "hwinfo" | awk '{print $1}' | head -1) != hwinfo ]]; then
			echo "El paquete hwinfo no esta instalado, debe ejecutar la instalacion."
			exit 1
		fi
		mkdir -p /tmp/"$name"
		chmod 666 "$listo"
		dmidecode > "$listo"/dmidecode.txt
		free > "$listo"/ram.txt
		hwinfo --all --listmd --log "$listo"/hwinfo.log
		lscpu > "$listo"/cpu.txt
		lshw > "$listo"/lshw.txt
		lspci > "$listo"/pci.txt
		lspcmcia  > "$listo"/pcmcia.txt
		lsusb > "$listo"/usb.txt
		chmod -R 666 "$listo"
		tar -czf /tmp/"$name".tar.gz "$listo"
		rm -rf "$listo"/*
		rmdir "$listo"
		if [[ -f /tmp/$name.tar.gz ]]; then
			echo "Archivo /tmp/$name.tar.gz creado exitosamente"
		else
			echo "La creacion del archivo /tmp/$name.tar.gz no se completo"
		fi
		echo "Finalizado..."
		;;

	*)
		echo "uso: $(basename $0) {instalar|buscar}"
		;;

esac

rm -f /run/$(basename $0).pid
exit 0
